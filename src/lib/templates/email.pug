doctype html
html
  head
    style.
      body {
        font-family: 'Poppins', Arial, sans-serif;
        background-color: #1a2a44;
        color: #ffffff;
        padding: 30px;
        margin: 0;
      }
      .container {
        background: linear-gradient(135deg, #2a3b5a, #3b4a6b); 
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3); 
        max-width: 600px;
        margin: 0 auto;
      }
      h1 {
        color: #a3bffa; 
        font-size: 2em;
        text-align: center;
      }
      p {
        font-size: 1.1em;
        line-height: 1.6;
        color: #d1d5db; 
        text-align: center;
      }
      .button-container {
        text-align: center;
      }
      a {
        color: #ffffff !important;
        background: linear-gradient(to right, #667eea, #764ba2);
        padding: 12px 25px;
        text-decoration: none;
        border-radius: 25px;
        display: inline-block;
        font-weight: bold;
        transition: transform 0.2s ease;
      }
      a:hover {
        transform: scale(1.05);
      }
